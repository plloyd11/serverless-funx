---
let { title, link, description, img } = Astro.props;
---

<div class="overflow-hidden bg-white divide-y divide-gray-200 rounded-lg shadow">
    <a href={link}>
        <div>
            <img src={img} alt={title} class="object-cover object-center h-64" />
        </div>
        <div class="px-4 py-4 space-y-1 sm:px-6">
            <h4 class="text-xl text-gray-900">{title}</h4>
            <p class="text-lg text-gray-700">{description}</p>
        </div>
    </a>
</div>
